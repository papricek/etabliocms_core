<h1>Přihlášení</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "standard-form"}) do |f| %>
    <fieldset>
      <p>
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
      </p>

      <p>
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
      </p>

      <% if devise_mapping.rememberable? -%>
          <p>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </p>
      <% end -%>

      <p><%= f.submit t('common.login'), :class => "submit" %></p>
    </fieldset>
<% end %>

